{
  "name": "pivotal-flow",
  "version": "1.1.0",
  "description": "Automate your pivotal workflow",
  "main": "index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=6.8.0",
    "git": ">=2.11.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "build": "rm -rf dist && tsc",
    "start": "tsc --watch"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "pivotal-flow": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ClearTax/pivotal-flow.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "pivotal",
    "pivotaltracker",
    "husky",
    "git-hooks",
    "git",
    "hook",
    "hooks",
    "post-checkout"
  ],
  "bugs": {
    "url": "https://github.com/ClearTax/pivotal-flow/issues"
  },
  "homepage": "https://github.com/ClearTax/pivotal-flow#readme",
  "author": "Raj Anand",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "./hooks/prepare-commit-msg/index.js",
      "post-checkout": "./hooks/post-checkout/index.js"
    }
  },
  "lint-staged": {
    "**/*.{json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@sindresorhus/slugify": "^0.9.1",
    "axios": "^0.19.0",
    "chalk": "^2.4.2",
    "cli-table": "^0.3.1",
    "commander": "^3.0.2",
    "fast-memoize": "^2.5.1",
    "fuzzy": "^0.1.3",
    "inquirer": "^7.0.0",
    "inquirer-autocomplete-prompt": "^1.0.1",
    "meow": "^5.0.0",
    "ora": "^4.0.2",
    "serialize-javascript": "^2.1.0"
  },
  "devDependencies": {
    "@types/cli-table": "^0.3.0",
    "@types/eslint": "^6.1.2",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/inquirer": "^6.5.0",
    "@types/meow": "^5.0.0",
    "@types/serialize-javascript": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-lodash": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  }
}
