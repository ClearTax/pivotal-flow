{
  "name": "pivotal-flow",
  "version": "1.1.0",
  "description": "Automate your pivotal workflow",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix"
  },
  "bin": {
    "pivotal-flow": "index.js",
    "pivotal-flow-start": "index.js",
    "pivotal-flow-check": "./hooks/post-checkout/index.js",
    "pivotal-flow-prepare-commit-msg": "./hooks/prepare-commit-msg/index.js",
    "pivotal-flow-commit-msg": "./hooks/commit-msg/index.js",
    "pfs": "index.js",
    "pf": "index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ClearTax/pivotal-flow.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "pivotal",
    "pivotaltracker",
    "husky",
    "git-hooks",
    "git",
    "hook",
    "hooks",
    "post-checkout"
  ],
  "bugs": {
    "url": "https://github.com/ClearTax/pivotal-flow/issues"
  },
  "homepage": "https://github.com/ClearTax/pivotal-flow#readme",
  "author": "Raj Anand",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "./hooks/prepare-commit-msg/index.js",
      "post-checkout": "./hooks/post-checkout/index.js"
    }
  },
  "lint-staged": {
    "**/*.{json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@sindresorhus/slugify": "^0.9.1",
    "axios": "^0.19.0",
    "chalk": "^2.4.2",
    "fuzzy": "^0.1.3",
    "inquirer": "^7.0.0",
    "inquirer-autocomplete-prompt": "^1.0.1"
  },
  "devDependencies": {
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  }
}
